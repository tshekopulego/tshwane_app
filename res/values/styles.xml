<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar"></style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
    </style>

    <style name="btn" parent="android:Widget.Holo.Light.Button">
        <item name="android:minHeight">1dp</item>
        <item name="android:minWidth">1dp</item>
    </style>

    <style name="tab_btn" parent="@style/btn">
        <item name="android:background">@drawable/btn_tab</item>
        <item name="android:textColor">@color/tab_color</item>
        <item name="android:textSize">@dimen/txt_16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">@dimen/pad_5dp</item>
    </style>

    <style name="spinner_style">
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#549e3b</item>
    </style>

    <style name="tab_divider">
        <item name="android:background">@color/main_color_gray</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="edittext" parent="android:Widget.Holo.Light.EditText">
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:ems">10</item>
        <item name="android:imeActionId">100</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:paddingLeft">@dimen/pad_5dp</item>
        <item name="android:paddingRight">@dimen/pad_5dp</item>
        <item name="android:textColorHint">@color/gray_light</item>
        <item name="android:drawablePadding">@dimen/pad_10dp</item>
        <item name="android:textSize">@dimen/txt_16sp</item>
    </style>

    <style name="lbl_feed" parent="android:Widget.Holo.Light.TextView">
        <item name="android:drawablePadding">@dimen/pad_3dp</item>
        <item name="android:textColor">@color/main_color_gray</item>
        <item name="android:textSize">@dimen/txt_14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="lbl_search1" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/main_color_gray_dk</item>
        <item name="android:textSize">@dimen/txt_15sp</item>
    </style>


    <style name="green_border_btn">
        <item name="android:background">@drawable/green_border_btn</item>
        <item name="android:textColor">@color/main_color_green</item>
        <item name="android:textSize">@dimen/txt_18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

</resources>